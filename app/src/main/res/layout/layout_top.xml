<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#043043">

    <ImageButton
        android:id="@+id/ibt_city_choice"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="1dp"
        android:background="@drawable/title_bar_add_city" />

    <TextView
        android:id="@+id/tv_cityname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/city_name"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="#0000"
        android:layout_margin="4dp"
        android:layout_alignBottom="@id/tv_cityname"
        android:src="@drawable/title_bar_city_location"
        android:layout_toRightOf="@+id/tv_cityname"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_margin="3dp"
        android:layout_below="@+id/tv_cityname"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#043043"
        android:gravity="center">

        <ImageView
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="#FFFFFF"
            android:layout_margin="2dp"/>

        <ImageView
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="#FFFFFF"
            android:layout_margin="2dp"/>

    </LinearLayout>

</RelativeLayout>